[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[user]
	name = Calvin Yu
	email = calvin@scoutmob.com
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff -b
	staged = diff -b --staged
	amend = commit --amend
  brl = for-each-ref --sort=-committerdate refs/heads --format='%(committerdate:short) %(refname:short)'
  l = log --pretty=format:'%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset'
[branch]
	autosetuprebase = always
[push]
	default = tracking
